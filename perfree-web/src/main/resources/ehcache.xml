<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" dynamicConfig="false">
    <diskStore path="java.io.tmpdir"/>
    <defaultCache
            maxElementsInMemory="500"
            eternal="false"
            timeToIdleSeconds="7200"
            timeToLiveSeconds="7200"
            overflowToDisk="true"
    />
    <cache
            name="articleHits"
            maxElementsInMemory="500"
            eternal="false"
            timeToIdleSeconds="7200"
            timeToLiveSeconds="7200"
            overflowToDisk="true"
    >
    </cache>

    <cache
            name="commentCache"
            maxElementsInMemory="500"
            eternal="false"
            timeToIdleSeconds="60"
            timeToLiveSeconds="60"
            overflowToDisk="true"
    >
    </cache>

    <cache
            name="accessCache"
            maxElementsInMemory="500"
            eternal="false"
            timeToIdleSeconds="60"
            timeToLiveSeconds="60"
            overflowToDisk="true"
    >
    </cache>

    <cache
            name="loginCache"
            maxElementsInMemory="500"
            eternal="false"
            timeToIdleSeconds="600"
            timeToLiveSeconds="600"
            overflowToDisk="true"
    >
    </cache>

    <cache
            name="optionData"
            maxElementsInMemory="10000"
            eternal="false"
            timeToIdleSeconds="0"
            timeToLiveSeconds="0"
            overflowToDisk="true"
    >
    </cache>

</ehcache>